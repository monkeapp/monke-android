<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/keypad_hex"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/margin_edges_half"
    android:paddingTop="@dimen/margin_edges_half"
    android:paddingEnd="@dimen/margin_edges_half"
    android:paddingBottom="@dimen/margin_edges_half"
    >

    <LinearLayout
        android:id="@+id/digits_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:weightSum="10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <TextView
            style="@style/KB_Key"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1"
            />

        <TextView
            style="@style/KB_Key"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2"
            />

        <TextView
            style="@style/KB_Key"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="3"
            />

        <TextView
            style="@style/KB_Key"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="4"
            />

        <TextView
            style="@style/KB_Key"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="5"
            />

        <TextView
            style="@style/KB_Key"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="6"
            />

        <TextView
            style="@style/KB_Key"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="7"
            />

        <TextView
            style="@style/KB_Key"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="8"
            />

        <TextView
            style="@style/KB_Key"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="9"
            />

        <TextView
            style="@style/KB_Key"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"
            />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/letter_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_edges_medium"
        android:layout_marginTop="@dimen/margin_edges_medium"
        android:layout_marginEnd="@dimen/margin_edges_medium"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toStartOf="@id/b7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/digits_container"

        >

        <TextView
            android:id="@+id/b0"
            style="@style/KB_Key"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Mx"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/b1"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/b1"
            style="@style/KB_Key"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:text="a"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/b2"
            app:layout_constraintStart_toEndOf="@id/b0"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/b2"
            style="@style/KB_Key"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="b"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/b3"
            app:layout_constraintStart_toEndOf="@id/b1"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/b3"
            style="@style/KB_Key"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="c"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/b4"
            app:layout_constraintStart_toEndOf="@id/b2"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/b4"
            style="@style/KB_Key"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="d"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/b5"
            app:layout_constraintStart_toEndOf="@id/b3"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/b5"
            style="@style/KB_Key"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="e"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/b6"
            app:layout_constraintStart_toEndOf="@id/b4"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/b6"
            style="@style/KB_Key"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="f"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/b5"
            app:layout_constraintTop_toTopOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/b7"
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_edges_medium"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="4dp"
        android:clickable="true"
        android:focusable="true"
        android:tag="backspace"
        android:src="@drawable/ic_backspace_white"
        android:tint="?attr/mon_textColorSecondary"
        app:layout_constraintBottom_toBottomOf="@id/letter_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintTop_toTopOf="@id/letter_container"
        />

</androidx.constraintlayout.widget.ConstraintLayout>