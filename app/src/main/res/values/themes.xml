<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="KB" parent="Wallet">

    </style>

    <style name="KB_Key">
        <item name="android:textSize">@dimen/text_size_23</item>
        <item name="android:textColor">?attr/mon_textColorSecondary</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="KB_NumKey">
        <item name="android:textSize">@dimen/text_size_30</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textColor">?attr/mon_textColorSecondary</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="KB_Light" parent="KB">
        <item name="android:colorBackground">#eceff0</item>
        <item name="android:background">#eceff0</item>
        <item name="android:textColor">@color/textColorSecondary</item>
        <item name="android:textColorPrimary">@color/textColorSecondary</item>

        <item name="mon_textColorPrimary">@color/black</item>
        <item name="mon_textColorSecondary">@color/black</item>
        <item name="mon_inputBackground">@color/white</item>
        <item name="mon_inputBackgroundError">@color/errorField</item>
        <item name="mon_iconTint">@color/colorPrimary</item>

        <item name="mon_buttonColorDefault">@color/buttonColorDefault</item>
        <item name="mon_buttonColorHovered">@color/buttonColorHovered</item>
        <item name="mon_buttonColorFocused">@color/buttonColorFocused</item>
        <item name="mon_buttonColorDisabled">@color/buttonColorDisabled</item>

        <item name="mon_sent_share_title">@string/sent_share_title_light</item>

    </style>

    <style name="CardInput" parent="CardView">
        <item name="cardBackgroundColor">?mon_inputBackground</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">2dp</item>
    </style>

    <style name="KB_Dark" parent="KB">
        <item name="android:colorBackground">#21272b</item>
        <item name="android:background">#21272b</item>
        <item name="android:textColorHint">#a0a5a8</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="colorControlHighlight">@color/dark_inputBackground</item>

        <item name="mon_textColorPrimary">@color/white</item>
        <item name="mon_textColorSecondary">@color/dark_textSecondary</item>
        <item name="mon_inputBackground">@color/dark_inputBackground</item>
        <item name="mon_inputBackgroundError">@color/errorField</item>
        <item name="mon_iconTint">@color/white</item>
        <item name="mon_buttonColorDisabled">@color/dark_inputBackground</item>

        <item name="mon_sent_share_title">@string/sent_share_title_dark</item>
    </style>
</resources>