<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">
    <!--    h 21*100/90-->
    <!--    w 21*100/160-->

    <ImageView
        android:id="@+id/logo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/img_logo"
        app:layout_constraintBottom_toTopOf="@id/banana"
        app:layout_constraintEnd_toEndOf="@id/guide_logo_right"
        app:layout_constraintHeight_percent=".1"
        app:layout_constraintStart_toStartOf="@id/guide_logo_left"
        app:layout_constraintTop_toTopOf="@id/guide_top"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintVertical_chainStyle="spread_inside"
        />

    <ImageView
        android:id="@+id/banana"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/img_big_banana"
        app:layout_constraintBottom_toBottomOf="@id/guide_bot"
        app:layout_constraintEnd_toEndOf="@id/guide_banana_right"
        app:layout_constraintHeight_percent=".2"
        app:layout_constraintStart_toStartOf="@id/guide_banana_left"
        app:layout_constraintTop_toBottomOf="@id/logo"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_logo_right"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".767"
        app:layout_constraintTop_toTopOf="parent"
        />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_top"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="146dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_banana_left"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".0875"
        app:layout_constraintTop_toTopOf="parent"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_banana_right"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".9125"
        app:layout_constraintTop_toTopOf="parent"
        />

    <!--    8,75-->

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_logo_left"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".233"
        app:layout_constraintTop_toTopOf="parent"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_bot"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintGuide_percent=".9"
        />


</androidx.constraintlayout.widget.ConstraintLayout>